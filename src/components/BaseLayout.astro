---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>ONT - Overnight Transformations</title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    
    <style>
      /* Apply font globally */
      * {
        font-family: 'Poppins', sans-serif;
      }

      /* Loader overlay styles */
      #form-loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
      }
      
      #form-loader.active {
        display: flex;
      }
      
      .loader-spinner {
        width: 50px;
        height: 50px;
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top-color: #fff;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
      }
      
      @keyframes spin {
        to { transform: rotate(360deg); }
      }
    </style>
  </head>
  <body class="min-h-screen bg-background">
    <!-- Loader overlay -->
    <div id="form-loader">
      <div class="loader-spinner"></div>
    </div>
    
    <Header />

    <main>
      <slot/>
      <!-- Footer -->
      <Footer />
    </main>

    <script>
      // Utility functions for loader
      const showLoader = () => {
        const loader = document.getElementById("form-loader");
        if (loader) loader.classList.add("active");
      };
      
      const hideLoader = () => {
        const loader = document.getElementById("form-loader");
        if (loader) loader.classList.remove("active");
      };

      // Waitlist form handler
      const waitlistForm = document.getElementById(
        "waitlist-form"
      ) as HTMLFormElement;

      waitlistForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        showLoader();

        const data = new FormData(waitlistForm);
        data.append("form_id", "1");
        data.append("waitlist-submit", "waitlist-submit");

        try {
          const r = await fetch(
            "https://overnighttransformations.com/forms/ft_ajax.php",
            {
              method: "POST",
              body: data,
            }
          );

          const json = await r.json();

          if (json.success) {
            alert("Welcome to ONT! You're on the early access list.");

            waitlistForm.reset();

            // Cleanly clear the email field
            const emailInput = waitlistForm.querySelector(
              'input[name="email"]'
            ) as HTMLInputElement;

            if (emailInput) {
              emailInput.value = "";
              emailInput.dispatchEvent(new Event("input", { bubbles: true }));
            }
          } else {
            // Show real PHP/Auth/FormTools error
            alert(
              json.error ||
                "There was an error submitting the form. Please try again."
            );
          }
        } catch (err) {
          alert("Network or server error. Please try again.");
          console.error(err);
        } finally {
          hideLoader();
        }
      });

      // Questionnaire form handler
      const questionnaireForm = document.getElementById(
        "questionnaire-form"
      ) as HTMLFormElement;
      questionnaireForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        showLoader();

        const data = new FormData(questionnaireForm);
        data.append("form_id", "3");
        data.append("waitlist-submit", "waitlist-submit");

        try {
          const r = await fetch(
            "https://overnighttransformations.com/forms/ft_ajax.php",
            {
              method: "POST",
              body: data,
            }
          );

          const json = await r.json();

          if (json.success) {
            alert(
              "Thank you for your feedback! This helps us build the best fitness app."
            );
            questionnaireForm.reset();
            // Explicitly reset selects and textarea for visual consistency
            questionnaireForm.querySelectorAll("select").forEach((select) => {
              (select as HTMLSelectElement).value = "";
              select.dispatchEvent(new Event("change", { bubbles: true }));
            });
            const textarea = questionnaireForm.querySelector(
              'textarea[name="mustUse"]'
            ) as HTMLTextAreaElement;
            textarea.value = "";
            textarea.dispatchEvent(new Event("input", { bubbles: true }));
          } else {
            // Show real PHP/Auth/FormTools error
            alert(
              json.error ||
                "There was an error submitting the form. Please try again."
            );
          }
        } catch (err) {
          alert("Network or server error. Please try again.");
          console.error(err);
        } finally {
          hideLoader();
        }
      });

      // Contact form handler
      const contactForm = document.getElementById(
        "contact-form"
      ) as HTMLFormElement;
      contactForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        showLoader();

        const data = new FormData(contactForm);

        console.log(data);
        data.append("form_id", "2");
        data.append("waitlist-submit", "waitlist-submit");

        try {
          const r = await fetch(
            "https://overnighttransformations.com/forms/ft_ajax.php",
            {
              method: "POST",
              body: data,
            }
          );

          const json = await r.json();

          if (json.success) {
            alert("Message sent! We'll get back to you soon.");
            contactForm.reset();
            // Explicitly reset inputs and textarea
            contactForm.querySelectorAll("input, textarea").forEach((input) => {
              const elem = input as HTMLInputElement | HTMLTextAreaElement;
              elem.value = "";
              elem.dispatchEvent(new Event("input", { bubbles: true }));
            });
          } else {
            // Show real PHP/Auth/FormTools error
            alert(
              json.error ||
                "There was an error submitting the form. Please try again."
            );
          }
        } catch (err) {
          alert("Network or server error. Please try again.");
          console.error(err);
        } finally {
          hideLoader();
        }
      });
    </script>

    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 800,
        easing: "ease-in-out",
        once: true,
        offset: 100,
      });
    </script>

  </body>
</html>