<section class="section-padding" id="waitlist">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center space-y-8">
        <div class="space-y-4">
          <h2
            data-aos="fade-down"
            class="font-display text-4xl md:text-5xl font-bold"
          >
            Join <span class="gradient-text">Early Access</span>
          </h2>
          <p
            data-aos="fade-up"
            data-aos-delay="100"
            class="text-lg text-muted-foreground"
          >
            Get notified the moment ONT goes live. Join thousands of early
            members who want first access.
          </p>
        </div>

        <form
          data-aos="zoom-in"
          data-aos-delay="200"
          id="waitlist-form"
          class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto"
        >
          <input
            type="email"
            name="email"
            placeholder="Enter your email"
            required
            class="flex-1 px-4 py-3 bg-background border border-border rounded-md text-foreground"
          />
          <button
            name="waitlist-submit"
            id="waitlist-submit"
            type="submit"
            class="bg-[#CFB53B] cursor-pointer font-bold text-primary-foreground hover:bg-primary-glow px-8 py-3 rounded-md text-lg transition-all"
          >
            Join Waitlist
          </button>
        </form>

        <p class="text-sm text-muted-foreground">
          No spam. Just updates, perks, and early access.
        </p>
      </div>
    </div>
  </section>